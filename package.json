{
  "name": "playwright_automation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "lint-check": "eslint .",
    "format-check": "prettier --check .",
    "validate": "npm run format && npm run lint",
    "e2e": "npx playwright test",
    "e2e:headed": "npx playwright test --headed",
    "e2e:debug": "npx playwright test --debug",
    "e2e:smoke": "npx playwright test --grep @smoke",
    "e2e:regression": "npx playwright test --grep @regression",
    "e2e:critical": "npx playwright test --grep @critical",
    "postinstall": "npm update browserstack-node-sdk",
    "e2e-browserstack": "npx browserstack-node-sdk playwright test",
    "e2e:headed-browserstack": "npx browserstack-node-sdk playwright test --headed",
    "e2e:debug-browserstack": "npx browserstack-node-sdk playwright test --debug",
    "e2e:smoke-browserstack": "npx browserstack-node-sdk playwright test --grep @smoke",
    "e2e:regression-browserstack": "npx browserstack-node-sdk playwright test --grep @regression",
    "e2e:critical-browserstack": "npx browserstack-node-sdk playwright test --grep @critical",
    "generateSchema": "ts-node src/common/utils/generate-zod-schema.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.1",
    "@types/luxon": "^3.6.2",
    "@types/mssql": "^9.1.7",
    "@types/node": "^22.10.2",
    "@types/xmldom": "^0.1.34",
    "browserstack-node-sdk": "^1.35.10",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "xmldom": "^0.6.0",
    "zod-to-ts": "^1.2.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "json-to-zod": "^1.1.2",
    "luxon": "^3.6.1",
    "mssql": "^11.0.1",
    "node": "^23.4.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.51"
  }
